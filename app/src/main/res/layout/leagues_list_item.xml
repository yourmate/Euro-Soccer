<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/touch_selector"
              android:minHeight="?attr/listPreferredItemHeight"
              android:paddingLeft="5dp"
              android:paddingRight="5dp">

    <LinearLayout android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1">

        <ImageView android:id="@+id/league_icon"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="2"
                  android:gravity="center"
                  android:orientation="vertical">

        <TextView android:id="@+id/league_name"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:fontFamily="sans-seriff-condensed"
                  android:gravity="center_horizontal"
                  android:textColor="@color/dark_black"
                  android:textAppearance="?android:textAppearanceLarge"
                  android:textStyle="bold"/>

        <TextView android:id="@+id/match_day"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center_horizontal"
                  android:fontFamily="sans-seriff-condensed"
                  android:textColor="@color/dark_black"
                  android:textAppearance="?android:textAppearanceMedium"/>

        <TextView android:id="@+id/total_teams"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center_horizontal"
                  android:fontFamily="sans-seriff-condensed"
                  android:textColor="@color/dark_black"
                  android:textAppearance="?android:textAppearanceMedium"/>

        <TextView android:id="@+id/total_games"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center_horizontal"
                  android:fontFamily="sans-seriff-condensed"
                  android:textColor="@color/dark_black"
                  android:textAppearance="?android:textAppearanceMedium"/>

    </LinearLayout>

</LinearLayout>